<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_count"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/count_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/bad_face"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginVertical="18dp" />

    <TextView
        android:id="@+id/count_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:05"
        android:textSize="12sp"
        android:textColor="@color/medium_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/count_img"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/count_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화면과 너무 가까워요."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/main_black"
        app:layout_constraintTop_toBottomOf="@+id/count_time"
        app:layout_constraintStart_toStartOf="@+id/count_time"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>