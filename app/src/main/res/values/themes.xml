<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 앱 기본 테마 -->
    <style name="Theme.Posee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 모달창 전용 테마는 별도 스타일로 독립 선언 -->
    <style name="TopDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- spinner 커스텀 -->
    <style name="Widget.My.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:overlapAnchor">false</item>
    </style>

</resources>
